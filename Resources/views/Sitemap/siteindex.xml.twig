{% spaceless %}
    <?xml version="1.0" encoding="UTF-8"?>
    <sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
        {% for page in range(1, max(1, totalPages)) %}
            <sitemap>
                <loc>{{ url('sitemap', {'page': page}) }}</loc>
            </sitemap>
        {% endfor %}
    </sitemapindex>
{% endspaceless %}